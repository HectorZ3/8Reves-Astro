<style is:global>
    .footer {
        position: relative;
        overflow: hidden;
        background: #bd1616;
    }
    
    .bubbles {
        background: #bd1616;
        filter: url("#bubble-filter");
    }
    
    .bubble {
        position: absolute;
        left: var(--pos);
        width: var(--size);
        height: var(--size);
        background: #bd1616;
        border-radius: 50%;
        animation: 
            float-up var(--duration) ease-in infinite var(--delay),
            fade-out var(--duration) ease-in infinite var(--delay);
        transform: translate(-50%, 0);
        opacity: 0.6;
    }
    
    @keyframes float-up {
        0% { bottom: -20px; }
        100% { bottom: var(--distance); }
    }
    
    @keyframes fade-out {
        0%, 80% { opacity: 0.6; }
        100% { opacity: 0; }
    }
</style>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('bubbles-container');
    if (!container) return;
    
    // Limpiar contenedor
    container.innerHTML = '';
    
    // Crear 15 burbujas
    for (let i = 0; i < 15; i++) {
        const bubble = document.createElement('div');
        bubble.className = 'bubble';
        
        // Propiedades aleatorias
        const size = Math.random() * 30 + 15; // 15-45px
        const pos = Math.random() * 100; // 0-100%
        const duration = Math.random() * 5 + 3; // 3-8s
        const delay = Math.random() * 3; // 0-3s
        const distance = Math.random() * 150 + 100; // 100-250px
        
        bubble.style.setProperty('--size', `${size}px`);
        bubble.style.setProperty('--pos', `${pos}%`);
        bubble.style.setProperty('--duration', `${duration}s`);
        bubble.style.setProperty('--delay', `${delay}s`);
        bubble.style.setProperty('--distance', `${distance}px`);
        
        container.appendChild(bubble);
    }
});
</script>